<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".regular_last">


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/s13" />

    <EditText

        android:id="@+id/textPE"
        android:layout_width="369dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:textColor="@android:color/secondary_text_light"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/imageView10"
        tools:text="Текст"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imagePE"
        android:layout_width="368dp"
        android:layout_height="164dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="@+id/textPE"
        app:layout_constraintStart_toStartOf="@+id/textPE"
        app:layout_constraintTop_toBottomOf="@+id/textPE"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:textColor="@android:color/secondary_text_light"
        android:id="@+id/Reg"
        android:layout_width="368dp"
        android:layout_height="28dp"
        android:layout_marginTop="36dp"
        android:text="@string/e1"
        app:layout_constraintEnd_toEndOf="@+id/imagePE"
        app:layout_constraintStart_toStartOf="@+id/imagePE"
        app:layout_constraintTop_toBottomOf="@+id/imagePE" />

    <TextView
        android:id="@+id/nameP"
        android:layout_width="368dp"
        android:layout_height="26dp"
        android:text="название"
        android:textStyle="bold"
        android:textSize="23dp"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintBottom_toTopOf="@+id/Reg"
        app:layout_constraintEnd_toEndOf="@+id/Reg"
        app:layout_constraintStart_toStartOf="@+id/Reg"
        app:layout_constraintTop_toBottomOf="@+id/imagePE" />

    <ProgressBar
        android:id="@+id/progress"
        android:backgroundTint="@android:color/white"
        android:progressBackgroundTint="@android:color/darker_gray"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="245dp"
        android:layout_height="20dp"
        android:layout_marginTop="32dp"
        android:alpha="1"
        android:background="@android:color/white"
        android:progress="0"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/Reg"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="@+id/Reg"
        app:layout_constraintTop_toBottomOf="@+id/Reg"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/monetT"
        android:layout_width="246dp"
        android:layout_height="21dp"
        android:text="Помогите первым"
        android:textColor="@android:color/secondary_text_light"
        app:layout_constraintBottom_toTopOf="@+id/progress"
        app:layout_constraintEnd_toEndOf="@+id/progress"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/progress"
        app:layout_constraintTop_toBottomOf="@+id/Reg"
        app:layout_constraintVertical_bias="0.727" />

    <Button
        android:id="@+id/exit"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:layout_marginEnd="192dp"
        android:layout_marginRight="192dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        app:layout_constraintVertical_bias="0.523"
        tools:visibility="visible" />

    <Button
        android:id="@+id/publish"
        android:layout_width="31dp"
        android:layout_height="31dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.956"
        app:layout_constraintStart_toStartOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/imageView10"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="109dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="@+id/progress"
        app:layout_constraintStart_toEndOf="@+id/progress"
        app:layout_constraintTop_toTopOf="@+id/monetT"
        app:layout_constraintVertical_bias="0.714"
        app:srcCompat="@drawable/butget" />

    <Button
        android:id="@+id/pomoch"
        android:layout_width="92dp"
        android:layout_height="39dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintEnd_toEndOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toStartOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintVertical_bias="1.0"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>